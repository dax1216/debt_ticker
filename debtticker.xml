<?xml version="1.0" encoding="UTF-8"?>
<extension type="component" version="3.1" client="site" method="upgrade">
   <name>Debt Ticker</name>
   <author>Dax Panganiban</author>
   <version>1.0.0</version>
   <description>Custom component to display debt ticker.</description>
      
   <install>
     <sql>
         <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>         
     </sql>
   </install>

   <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>            
        </sql>
   </uninstall>
   
   <update> <!-- Runs on update; New in 2.5 -->
      <schemas>
         <schemapath type="mysql">sql/updates/mysql</schemapath>
      </schemas>
   </update>
   
   <files folder="site">
      <filename>index.html</filename>
      <filename>debtticker.php</filename>
      <filename>controller.php</filename>
      <folder>views</folder>
      <folder>models</folder>
   </files>
   
   <media destination="mod_ticker" folder="media">
      <folder>css</folder>
      <folder>img</folder>
      <folder>js</folder>
   </media>
   <administration>
      <!-- Administration Menu Section -->
      <menu>Debt Ticker</menu>
      <!-- Administration Main File Copy Section -->
      <!-- Note the folder attribute: This attribute describes the folder
              to copy FROM in the package to install therefore files copied
              in this section are copied from /admin/ in the package -->
      <files folder="admin">
         <!-- Admin Main File Copy Section -->
         <filename>index.html</filename>
         <filename>debtticker.php</filename>
         <!-- SQL files section -->
         <folder>sql</folder>
      </files>
   </administration>


</extension>
